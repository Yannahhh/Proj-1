<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/player1"
            android:contentDescription="photo"
            android:background="#330000"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/player2"
            android:contentDescription="photo"
            android:background="#330000"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:id="@+id/laugh"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/player1"
            >
            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/action1"
                android:background="#ffffff"
                />
            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/action2"
                android:background="#ffffff"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/player1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/blood"
                android:layout_marginStart="30dp"
                android:id="@+id/player1_description"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/player1_blood"
                android:text="33"
                android:layout_toRightOf="@id/player1_description"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/numofcard"
                android:layout_below="@+id/player1_blood"
                android:layout_marginStart="30dp"
                android:id="@+id/player1_description1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="33"
                android:layout_below="@id/player1_description"
                android:layout_toRightOf="@id/player1_description1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/player2"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/blood"
                android:layout_marginStart="30dp"
                android:id="@+id/player2_description"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/player2_blood"
                android:text="33"
                android:layout_toRightOf="@id/player2_description"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/numofcard"
                android:layout_below="@+id/player2_blood"
                android:layout_marginStart="30dp"
                android:id="@+id/player2_description1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="33"
                android:layout_below="@id/player2_description"
                android:layout_toRightOf="@id/player2_description1"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/battle_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />
        <com.example.vince.proj.UI.SpeedRecyclerView
            android:id="@+id/battle_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

</LinearLayout>


